<!DOCTYPE html>
<%#Page trace="no"%>

<html>
<head>
   <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1"/>
   <title>Dodawanie nowego budynku</title>
</head>

<body>
 <%#Code locality="page-global"%>
 <%
    #include "C:\inetpub\wwwroot\czynsze\HTMLWriter.ch"
 %>

  <!--- Page content goes here --->
   <%
      ? HTMLWriter(): h1("Nowy budynek")
   %>

   <form id="formOfAddingNewBuilding" method="get" action="DodawanieBudynku.cxp">
      <table>
         <tr valign="top">
            <td>
             <%
                ? HTMLWriter(): inputText("kod_1", "Kod budynku:", "5")+"<br /><br />"
                ? HTMLWriter(): inputText("il_miesz", "Ilo"+HTMLWriter(): _s()+HTMLWriter(): _c()+" lokali:", "3")+"<br /><br />"
                ? HTMLWriter(): inputRadio("sp_rozl", "Sposób rozliczania:", {"0", "1"}, {"0", "1"}, {"budynek", "lokale"})+"<br />"
                ? HTMLWriter(): inputText("adres", "Adres: ", "30")+"<br />"
                ? HTMLWriter(): inputText("adres_2", "Adres cd.:", "30")+"<br /><br />"
                ? HTMLWriter(): inputText("udzial_w_k", "Udzia"+HTMLWriter(): _l()+" w koszt.:", "6")
             %>
            </td>
            <td>
             <%
                ? HTMLWriter(): textarea("uwagi", "Uwagi: ", "6", "420")
             %>
            </td>
         </tr>
      </table>
      <%
         ? HTMLWriter(): inputSubmit("Submit", "Dodaj")
      %>
   </form>

</body>

</html>