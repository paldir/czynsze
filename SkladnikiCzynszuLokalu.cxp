<!DOCTYPE html>
<%#Page trace="no"%>
<%#Code locality="page-global"%>
<%
     #include "C:\inetpub\wwwroot\czynsze\HTMLWriter.ch"
     #include "C:\inetpub\wwwroot\czynsze\DbHelper.ch"
%>
<%
   dbHelper:=DbHelper(): new("localhost", "czynsze")

   t_dan_p:="0"

   IF Len(::Params: nr_skl)>0
      dbHelper: SQLSelect({"s_zaplat"}, "czynsz", "nr_skl="+::Params: nr_skl)

      t_s_zaplat:=FieldGet(1)

      IF t_s_zaplat==2
         t_dan_p:=::Params: dan_p
      ENDIF

      DO CASE
         CASE ::Params: action=="add"
            dbHelper: SQLSelect({"nr_skl"}, "skl_cz", "nr_skl="+::Params: nr_skl+" AND kod_lok="+::Params: kod_lok+" AND nr_lok="+::Params: nr_lok)

            IF LastRec()==0
               dbHelper: SQLInsert("skl_cz", {"kod_lok", "nr_lok", "nr_skl", "dan_p"}, {::Params: kod_lok, ::Params: nr_lok, ::Params: nr_skl, t_dan_p})
               dbHelper: ExecuteStatement("INSERT INTO rent_components_added SELECT * FROM skl_cz WHERE kod_lok="+::Params: kod_lok+" AND nr_lok="+::Params: nr_lok+" AND nr_skl="+::Params: nr_skl)
            ENDIF
            //? dbHelper: GetLastMessage()
         CASE ::Params: action=="delete"
            dbHelper: ExecuteStatement("INSERT INTO rent_components_deleted SELECT * FROM skl_cz WHERE kod_lok="+::Params: kod_lok+" AND nr_lok="+::Params: nr_lok+" AND nr_skl="+::Params: nr_skl)
            dbHelper: SQLDelete("skl_cz", "kod_lok="+::Params: kod_lok+" AND nr_lok="+::Params: nr_lok+" AND nr_skl="+::Params: nr_skl)
            //? "kod_lok="+::Params: kod_lok+" AND nr_lok="+::Params: nr_lok+" AND nr_skl="+::Params: nr_skl
      ENDCASE
   ENDIF
%>
<html>
<head>
   <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1"/>
   <link rel="stylesheet" type="text/css" href="style.css" />
   <title>Logowanie</title>
   <script>
   function nr_skl_onchange(value) {
      <%
         dbHelper: SQLSelect({"nr_skl"}, "czynsz", "s_zaplat=2")
      %>
      values=[
      <%
         FOR i:=1 to LastRec()
            ? "'"+Var2Char(FieldGet(1))+"'"

            IF i!=LastRec()
               ? ", "
            ENDIF

            DbSkip()
         NEXT
      %>
      ];

      for (i=0; i<values.length; i++) {
         if (values[i]==value)
         {
            document.getElementById("dan_p_span").hidden=false
            return
         }
      }

      document.getElementById("dan_p_span").hidden=true
   }
   </script>
</head>

<body>
<%
   //? HTMLWriter(): h2("Sk"+HTMLWriter(): _l()+"adniki czynszu lokalu")

   //dbHelper: ExecuteQuery("SELECT c.nr_skl, row_number() OVER(ORDER BY c.nr_skl), c.nr_skl, c.nazwa, c.stawka, sc.dan_p, SUBSTRING((c.stawka*sc.dan_p)::TEXT FROM 1 FOR char_length((c.stawka*sc.dan_p)::TEXT)-4) FROM skl_cz sc JOIN czynsz c ON sc.nr_skl=c.nr_skl WHERE sc.kod_lok="+::Params: kod_lok+" AND sc.nr_lok="+::Params: nr_lok)
   dbHelper: ExecuteStatement("CREATE FUNCTION pg_temp.ilosc(NUMERIC, NUMERIC, NUMERIC, NUMERIC) RETURNS NUMERIC AS $$ BEGIN CASE $1 WHEN 1 THEN RETURN (SELECT pow_uzyt FROM lokale WHERE kod_lok=$2 AND nr_lok=$3); WHEN 2 THEN RETURN (SELECT dan_p FROM skl_cz WHERE kod_lok=$2 AND nr_lok=$3 AND nr_skl=$4); WHEN 3 THEN RETURN (SELECT il_osob FROM lokale WHERE kod_lok=$2 AND nr_lok=$3); WHEN 4 THEN RETURN 1; WHEN 6 THEN RETURN (SELECT il_osob FROM lokale WHERE kod_lok=$2 AND nr_lok=$3); END CASE; END; $$ LANGUAGE plpgsql;")
   dbHelper: ExecuteStatement("CREATE FUNCTION pg_temp.stawka(NUMERIC, NUMERIC) RETURNS NUMERIC AS $$ BEGIN RETURN (SELECT CASE $1 WHEN 0 THEN stawka_00 WHEN 1 THEN stawka_01 WHEN 2 THEN stawka_02 WHEN 3 THEN stawka_03 WHEN 4 THEN stawka_04 WHEN 5 THEN stawka_05 WHEN 6 THEN stawka_06 WHEN 7 THEN stawka_07 WHEN 8 THEN stawka_08 ELSE stawka_09 END FROM czynsz WHERE nr_skl=$2); END; $$ LANGUAGE plpgsql;")
   dbHelper: ExecuteQuery("SELECT c.nr_skl, row_number() OVER(ORDER BY c.nr_skl), c.nr_skl, ReplacePolishSymbols(c.nazwa), to_char(c.stawka, 'FM999999999.00'), to_char(pg_temp.ilosc(c.s_zaplat, sc.kod_lok, sc.nr_lok, sc.nr_skl), 'FM999999999.00'), to_char(CASE c.s_zaplat WHEN 6 THEN pg_temp.stawka(pg_temp.ilosc(c.s_zaplat, sc.kod_lok, sc.nr_lok, sc.nr_skl), sc.nr_skl) ELSE c.stawka*pg_temp.ilosc(c.s_zaplat, sc.kod_lok, sc.nr_lok, sc.nr_skl) END, 'FM999999999.0000') FROM skl_cz sc JOIN czynsz c ON sc.nr_skl=c.nr_skl WHERE sc.kod_lok="+::Params: kod_lok+" AND sc.nr_lok="+::Params: nr_lok+";")

   //? HTMLWriter(): inputButton("location.href=&quot;Lokale.cxp&quot;", "Powrót")
   ? HTMLWriter(): table({"Nr", "Lp.", "Nr", "Nazwa", "Stawka", "Ilo"+HTMLWriter(): _s()+HTMLWriter(): _c(), "Warto"+HTMLWriter(): _s()+HTMLWriter(): _c()}, , , , , "SkladnikiCzynszuLokalu.cxp?action=delete"+Chr(38)+"kod_lok="+::Params: kod_lok+Chr(38)+"nr_lok="+::Params: nr_lok+Chr(38)+"nr_skl=")

   dbHelper: ExecuteQuery("SELECT to_char(SUM(CASE c.s_zaplat WHEN 6 THEN pg_temp.stawka(pg_temp.ilosc(c.s_zaplat, sc.kod_lok, sc.nr_lok, sc.nr_skl), sc.nr_skl) ELSE c.stawka*pg_temp.ilosc(c.s_zaplat, sc.kod_lok, sc.nr_lok, sc.nr_skl) END), 'FM999999999.0000')FROM skl_cz sc JOIN czynsz c ON sc.nr_skl=c.nr_skl WHERE sc.kod_lok="+::Params: kod_lok+" AND sc.nr_lok="+::Params: nr_lok+";")

   ? "Razem: "+Var2Char(FieldGet(1))

%>
<form id="formOfRentComponentOfLocal" method="get" action="SkladnikiCzynszuLokalu.cxp">
   <%
      ? HTMLWriter(): inputHidden("action", "add")
      ? HTMLWriter(): inputHidden("kod_lok", ::Params: kod_lok)
      ? HTMLWriter(): inputHidden("nr_lok", ::Params: nr_lok)
      ? "Nowy sk"+HTMLWriter(): _l()+"adnik: "+HTMLWriter(): selectHTML(dbHelper, "nr_skl", , "", "", {"nr_skl", "nr_skl", "nazwa"}, "czynsz", "nr_skl", "nr_skl_onchange(this.value)")
      ? "<span id='dan_p_span'>Ilo"+HTMLWriter(): _s()+HTMLWriter(): _c()+": "+HTMLWriter(): inputText("dan_p", , "15", t_dan_p, "", "return isFloat(event)")+"</span>"
      ? HTMLWriter(): inputSubmit("Submit", "Dodaj")
   %>
</form>

<script>
      document.getElementById("dan_p_span").hidden=true
</script>

<%
   dbHelper: CloseConnection()
%>
</body>
</html>